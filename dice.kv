#:kivy 1.4.1

<DiceHistory>
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
        
<DiceWidget>
    dice_eqn_input: dice_eqn_input
    dice_output: dice_output
    dice_history: dice_history
    roll_it_btn: roll_it_btn
    
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        DiceEqnInput:
            id: dice_eqn_input
            font_size: 14
            size_hint: None, None
            size: root.width-(root.width/1.5), self.line_height * 1.65
            multiline: False
            pos: 0, root.top - self.height
            text: "Enter your dice roll equation here."
            on_focus: if self.text=="Enter your dice roll equation here.": self.text=""
            on_text_validate: root.roll_it()
            true_parent: root

        Button:
            id: roll_it_btn
            size: (root.width - (root.width/2.5)) - (root.dice_eqn_input.width + 1), root.dice_eqn_input.height
            pos: root.dice_eqn_input.right + 1, root.top - self.height
            text: "Roll It!"
            on_press: root.roll_it()

        TextInput:
            id: dice_output
            font_size: 14
            readonly: True
            size_hint: None, None
            size: root.width-(root.width/2.5), root.height - root.dice_eqn_input.height - 1
            pos: 0, root.top - self.height - root.dice_eqn_input.height - 1
            
        ScrollView:
            size_hint: None, None
            size: root.width-(root.dice_output.width+1), root.height/2.0
            pos: root.dice_output.right+1, root.top - self.height
            
#            AnchorLayout:
#                anchor_x: 'center'
#                anchor_y: 'bottom'
            Bubble:
                id: dice_history
                size_hint: None, None
                width: self.parent.width*0.9
                arros_pos: 'left_mid'
                orientation: 'vertical'
            
